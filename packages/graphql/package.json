{
  "name": "@klicker-uzh/graphql",
  "version": "2.0.0-alpha.0",
  "license": "AGPL-3.0",
  "main": "dist/index.js",
  "module": "dist/graphql.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "build": "dts build --entry src/index.ts --entry src/ops.ts",
    "dev": "NODE_ENV=development dts watch --entry src/index.ts --entry src/ops.ts",
    "lint": "dts lint",
    "generate": "npm-run-all generate:prisma generate:nexus generate:graphql",
    "generate:graphql": "graphql-codegen --config codegen.yml",
    "generate:prisma": "prisma generate --schema=src/prisma/schema.prisma",
    "generate:nexus": "ts-node --transpile-only -P tsconfig.nexus.json src/index.ts",
    "prisma:migrate": "prisma migrate dev --schema=src/prisma/schema.prisma",
    "prisma:push": "prisma db push --schema=src/prisma/schema.prisma",
    "prisma:reset": "prisma reset --schema=src/prisma/schema.prisma",
    "prisma:studio": "prisma studio --schema=src/prisma/schema.prisma",
    "size": "size-limit",
    "test": "dts test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "dts lint"
    }
  },
  "jest": {
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">=16"
  },
  "size-limit": [
    {
      "path": "dist/graphql.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/graphql.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@graphql-codegen/cli": "2.11.6",
    "@graphql-codegen/fragment-matcher": "3.3.1",
    "@graphql-codegen/introspection": "2.2.1",
    "@graphql-codegen/typed-document-node": "2.3.3",
    "@graphql-codegen/typescript": "2.7.3",
    "@graphql-codegen/typescript-operations": "2.5.3",
    "@graphql-codegen/typescript-react-apollo": "3.3.3",
    "@graphql-codegen/typescript-resolvers": "2.7.3",
    "@size-limit/preset-small-lib": "8.0.0",
    "@tsconfig/recommended": "1.0.1",
    "@types/express": "^4.17.13",
    "@uzh-bf/design-system": "0.0.25",
    "dts-cli": "1.5.2",
    "husky": "8.0.1",
    "prettier": "2.7.1",
    "prettier-plugin-organize-imports": "3.0.3",
    "prisma": "4.2.1",
    "size-limit": "8.0.0",
    "tslib": "2.4.0",
    "typescript": "4.7.4"
  },
  "dependencies": {
    "@prisma/client": "4.2.1",
    "graphql": "16.5.0",
    "graphql-scalars": "1.18.0",
    "nexus": "1.3.0"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
