{
  "name": "@klicker-uzh/graphql",
  "version": "3.0.0-beta.4",
  "license": "AGPL-3.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "generate": "graphql-codegen --config codegen.ts",
    "build": "run-s generate build:ts",
    "build:ts": "NODE_ENV=production tsup --dts",
    "dev": "npm-run-all --parallel dev:graphql dev:ts",
    "dev:ts": "NODE_ENV=development doppler run --config dev -- tsup --watch --dts",
    "dev:graphql": "doppler run --config dev -- graphql-codegen --config codegen.ts --watch '**/**.graphql' --watch '**/**.ts'",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "size": "size-limit",
    "check": "tsc --noEmit"
  },
  "engines": {
    "node": ">=18"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/ops.js",
      "limit": "10 KB"
    }
  ],
  "peerDependencies": {
    "graphql-yoga": "^3.6.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "5.0.0",
    "@graphql-codegen/fragment-matcher": "5.0.0",
    "@graphql-codegen/introspection": "4.0.0",
    "@graphql-codegen/schema-ast": "4.0.0",
    "@graphql-codegen/typed-document-node": "5.0.1",
    "@graphql-codegen/typescript": "4.0.1",
    "@graphql-codegen/typescript-operations": "4.0.1",
    "@graphql-codegen/typescript-resolvers": "4.0.1",
    "@graphql-typed-document-node/core": "3.2.0",
    "@parcel/watcher": "2.2.0",
    "@size-limit/preset-small-lib": "8.2.4",
    "@tsconfig/node18": "^2.0.1",
    "@tsconfig/recommended": "^1.0.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/mathjs": "^9.4.2",
    "@types/node": "^18.17.3",
    "@types/node-schedule": "^2.1.0",
    "@types/validator": "^13.9.0",
    "@types/web-push": "^3.3.2",
    "dotenv": "16.0.3",
    "graphql-codegen-persisted-query-ids": "0.1.2",
    "husky": "8.0.3",
    "ioredis": "5.3.2",
    "jest": "29.5.0",
    "npm-run-all": "4.1.5",
    "size-limit": "8.2.4",
    "ts-node": "10.9.1",
    "ts-node-dev": "2.0.0",
    "tsup": "7.2.0",
    "typescript": "5.1.6",
    "web-push": "3.6.1"
  },
  "dependencies": {
    "@klicker-uzh/grading": "workspace:*",
    "@klicker-uzh/prisma": "workspace:*",
    "@pothos/core": "3.32.1",
    "@pothos/plugin-prisma": "3.56.0",
    "@pothos/plugin-scope-auth": "3.20.0",
    "@pothos/plugin-validation": "3.9.2",
    "bcryptjs": "2.4.3",
    "dayjs": "1.11.7",
    "generate-password": "1.7.0",
    "graphql": "16.7.1",
    "graphql-scalars": "1.22.2",
    "jsonwebtoken": "9.0.1",
    "mathjs": "11.8.0",
    "node-schedule": "2.1.1",
    "ramda": "0.29.0",
    "uuid": "9.0.0",
    "validator": "13.9.0",
    "zod": "3.21.4"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
