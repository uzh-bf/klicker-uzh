{
  "name": "@klicker-uzh/graphql",
  "version": "2.0.0-alpha.0",
  "license": "AGPL-3.0",
  "main": "dist/index.js",
  "module": "dist/graphql.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "build": "dts build",
    "lint": "dts lint",
    "generate": "npm-run-all generate:prisma generate:nexus",
    "generate:prisma": "prisma generate --schema=src/prisma/schema.prisma",
    "generate:nexus": "ts-node --transpile-only -P tsconfig.nexus.json src/index.ts",
    "prisma:migrate": "prisma migrate dev",
    "prisma:push": "prisma db push",
    "prisma:reset": "prisma reset",
    "prisma:studio": "prisma studio",
    "size": "size-limit",
    "start": "dts watch",
    "test": "dts test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "dts lint"
    }
  },
  "jest": {
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">=16"
  },
  "size-limit": [
    {
      "path": "dist/graphql.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/graphql.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "8.0.0",
    "@tsconfig/recommended": "1.0.1",
    "@types/express": "^4.17.13",
    "dts-cli": "1.5.2",
    "husky": "8.0.1",
    "size-limit": "8.0.0",
    "tslib": "2.4.0",
    "typescript": "4.7.4"
  },
  "dependencies": {
    "@prisma/client": "4.2.1",
    "graphql": "16.5.0",
    "graphql-scalars": "1.18.0",
    "nexus": "1.3.0"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
