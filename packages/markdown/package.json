{
  "name": "@klicker-uzh/markdown",
  "version": "3.0.0-alpha.84",
  "license": "AGPL-3.0",
  "main": "dist/index.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "build": "run-s build:tw build:ts",
    "build:tw": "run-p build:tw:*",
    "build:tw:components": "tailwindcss -i src/components.css -o src/public/components.css",
    "build:tw:utilities": "tailwindcss -i src/utilities.css -o src/public/utilities.css",
    "build:ts": "NODE_ENV=production tsup",
    "//dev": "run-p dev:tailwind dev:ts",
    "dev:tailwind": "tailwindcss -i src/globals.css -o src/public/tailwind.css -w",
    "dev:ts": "NODE_ENV=development tsup --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "size": "size-limit",
    "check": "tsc --noEmit"
  },
  "engines": {
    "node": "=18"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "10 KB"
    }
  ],
  "peerDependencies": {
    "@fortawesome/free-regular-svg-icons": "^6.3.0",
    "@fortawesome/free-solid-svg-icons": "^6.2.0",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@uzh-bf/design-system": "^2.0.0",
    "next": "^13.0.0",
    "react": "^18.2.0",
    "tailwind-merge": "^1.8.0"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "8.2.4",
    "@tsconfig/node18": "^2.0.0",
    "@tsconfig/recommended": "^1.0.2",
    "npm-run-all": "4.1.5",
    "size-limit": "8.2.4",
    "tailwindcss": "3.3.2",
    "tsup": "6.7.0",
    "typescript": "5.0.4"
  },
  "dependencies": {
    "rehype-external-links": "2.1.0",
    "rehype-katex": "6.0.3",
    "rehype-prism-plus": "1.5.1",
    "rehype-react": "7.2.0",
    "rehype-sanitize": "5.0.1",
    "remark-math": "5.1.1",
    "remark-parse": "10.0.2",
    "remark-rehype": "10.1.0",
    "unified": "10.1.2"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
