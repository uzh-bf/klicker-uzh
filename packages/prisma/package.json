{
  "name": "@klicker-uzh/prisma",
  "version": "2.0.0-alpha.66",
  "license": "AGPL-3.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "build:all": "npm-run-all generate build",
    "build": "npm-run-all build:ts build:copy",
    "build:ts": "NODE_ENV=production tsup",
    "build:copy": "node src/copy.js",
    "build:watch": "NODE_ENV=development tsup --watch",
    "format": "prettier --write .",
    "generate": "prisma generate --schema=src/prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema=src/prisma/schema.prisma",
    "prisma:deploy": "prisma migrate deploy --schema=src/prisma/schema.prisma",
    "prisma:push": "prisma db push --schema=src/prisma/schema.prisma",
    "prisma:reset": "prisma migrate reset --schema=src/prisma/schema.prisma",
    "prisma:studio": "prisma studio --schema=src/prisma/schema.prisma",
    "preseed": "npm run build:all",
    "seed": "npm-run-all seed:bf1 seed:ami seed:test",
    "seed:test": "ENV=development ts-node --esm --experimental-specifier-resolution=node src/seed/seedTEST.ts",
    "seed:bf1": "ENV=development ts-node --esm --experimental-specifier-resolution=node src/seed/seedBF1.ts",
    "seed:ami": "ENV=development ts-node --esm --experimental-specifier-resolution=node src/seed/seedAMI.ts",
    "seed:prod": "npm-run-all seed:bf1 seed:ami",
    "seed:prod:bf1": "ENV=production ts-node --esm --experimental-specifier-resolution=node src/seed/seedBF1.ts",
    "seed:prod:ami": "ENV=production ts-node --esm --experimental-specifier-resolution=node src/seed/seedAMI.ts",
    "size": "size-limit"
  },
  "prisma": {
    "seed": "npm run seed"
  },
  "engines": {
    "node": "=18"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "9.1.6",
    "@size-limit/preset-small-lib": "8.1.0",
    "@tsconfig/node18": "1.0.1",
    "@tsconfig/recommended": "1.0.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/ramda": "^0.28.15",
    "bcryptjs": "2.4.3",
    "npm-run-all": "4.1.5",
    "prisma": "4.3.1",
    "prisma-erd-generator": "1.2.0",
    "ramda": "0.28.0",
    "size-limit": "8.1.0",
    "ts-node": "10.9.1",
    "tsup": "6.2.3",
    "typescript": "4.8.3"
  },
  "dependencies": {
    "@prisma/client": "4.3.1"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
