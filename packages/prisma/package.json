{
  "name": "@klicker-uzh/prisma",
  "version": "3.0.0-alpha.0",
  "license": "AGPL-3.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "prebuild": "npm run generate",
    "build": "npm-run-all build:ts build:copy",
    "build:ts": "NODE_ENV=production tsup",
    "build:copy": "node src/copy.js",
    "build:watch": "NODE_ENV=development tsup --watch",
    "format": "prettier --write .",
    "generate": "prisma generate --schema=src/prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema=src/prisma/schema.prisma",
    "prisma:deploy": "prisma migrate deploy --schema=src/prisma/schema.prisma",
    "prisma:deploy:qa": "dotenv -e .env.qa -- npm run prisma:deploy",
    "prisma:deploy:prod": "dotenv -e .env.production -- npm run prisma:deploy",
    "prisma:push": "prisma db push --schema=src/prisma/schema.prisma",
    "prisma:push:qa": "dotenv -e .env.qa -- npm run prisma:push",
    "prisma:reset": "prisma migrate reset --schema=src/prisma/schema.prisma --skip-seed",
    "prisma:reset:seed": "prisma migrate reset --schema=src/prisma/schema.prisma",
    "prisma:reset:qa": "dotenv -e .env.qa -- npm run prisma:reset",
    "prisma:studio": "prisma studio --schema=src/prisma/schema.prisma",
    "prisma:studio:qa": "dotenv -e .env.qa -- npm run prisma:studio",
    "prisma:studio:prod": "dotenv -e .env.production -- npm run prisma:studio",
    "preseed": "npm run build",
    "seed": "npm-run-all seed:bf1 seed:ami seed:test",
    "seed:test": "ENV=development ts-node -r dotenv/config --esm --experimental-specifier-resolution=node src/seed/seedTEST.ts",
    "seed:bf1": "ENV=development ts-node -r dotenv/config --esm --experimental-specifier-resolution=node src/seed/seedBF1.ts",
    "seed:ami": "ENV=development ts-node -r dotenv/config --esm --experimental-specifier-resolution=node src/seed/seedAMI.ts",
    "seed:achievements": "ENV=development ts-node -r dotenv/config --esm --experimental-specifier-resolution=node src/seed/seedAchievements.ts",
    "seed:qa": "ENV=development npm-run-all seed:qa:bf1 seed:qa:ami",
    "seed:qa:bf1": "ts-node -r dotenv/config --esm --experimental-specifier-resolution=node src/seed/seedBF1.ts dotenv_config_path=.env.qa",
    "seed:qa:ami": "ts-node -r dotenv/config --esm --experimental-specifier-resolution=node src/seed/seedAMI.ts dotenv_config_path=.env.qa",
    "seed:prod": "ENV=production npm-run-all seed:prod:bf1 seed:prod:ami",
    "seed:prod:bf1": "npm run seed:qa:bf1 -- dotenv_config_path=.env.production",
    "seed:prod:ami": "npm run seed:qa:ami -- dotenv_config_path=.env.production",
    "seed:prod:achievements": "ENV=production ts-node -r dotenv/config --esm --experimental-specifier-resolution=node src/seed/seedAchievements.ts dotenv_config_path=.env.production",
    "size": "size-limit"
  },
  "prisma": {
    "seed": "npm run seed"
  },
  "engines": {
    "node": "=18"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "9.1.6",
    "@size-limit/preset-small-lib": "8.1.0",
    "@tsconfig/node18": "1.0.1",
    "@tsconfig/recommended": "1.0.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/ramda": "^0.28.15",
    "bcryptjs": "2.4.3",
    "dotenv": "16.0.3",
    "dotenv-cli": "6.0.0",
    "npm-run-all": "4.1.5",
    "prisma": "4.8.1",
    "prisma-erd-generator": "1.2.0",
    "ramda": "0.28.0",
    "size-limit": "8.1.0",
    "ts-node": "10.9.1",
    "tsup": "6.5.0",
    "typescript": "4.9.4"
  },
  "dependencies": {
    "@prisma/client": "4.8.1"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
