{
  "name": "klicker-api",
  "version": "0.0.1",
  "main": "src/server.js",
  "repository": "https://github.com/uzh-bf/klicker-api.git",
  "author": "Roland Schl√§fli <roland.schlaefli@bf.uzh.ch>",
  "license": "AGPL-3.0",
  "dependencies": {
    "apollo-server-express": "1.1.3",
    "bcryptjs": "2.4.3",
    "body-parser": "1.18.2",
    "cookie-parser": "1.4.3",
    "cors": "2.8.4",
    "cross-env": "5.0.5",
    "dotenv": "4.0.0",
    "express": "4.16.2",
    "express-jwt": "5.3.0",
    "graphql": "0.11.7",
    "graphql-subscriptions": "0.5.4",
    "graphql-tools": "2.2.1",
    "jsonwebtoken": "8.1.0",
    "lodash": "4.17.4",
    "mongodb": "2.2.31",
    "mongoose": "4.12.1",
    "optics-agent": "1.1.7",
    "subscriptions-transport-ws": "0.9.1"
  },
  "devDependencies": {
    "babel-eslint": "8.0.1",
    "eslint": "4.8.0",
    "eslint-config-airbnb-base": "12.0.2",
    "eslint-plugin-import": "2.7.0",
    "husky": "0.14.3",
    "jest": "21.2.1",
    "lint-staged": "4.2.3",
    "nodemon": "1.12.1",
    "prettier": "1.7.4",
    "prettier-eslint": "8.2.0",
    "prettier-eslint-cli": "4.4.0"
  },
  "scripts": {
    "precommit": "lint-staged",
    "prepush": "yarn run test --onlyChanged",
    "dev": "nodemon -w \"src/**/*.js\" -w .env -w package.json -w yarn.lock src/server.js",
    "dev:inspect": "nodemon -w \"src/**/*.js\" -w .env -w package.json -w yarn.lock --inspect src/server.js",
    "format": "prettier-eslint --single-quote --no-semi --write \"src/**/*.js\"",
    "format:ci": "prettier-eslint --single-quote --no-semi --list-different \"src/**/*.js\"",
    "lint": "eslint \"src/**/*.js\"",
    "start": "cross-env NODE_ENV=production node src/server.js",
    "start:inspect": "cross-env NODE_ENV=production node --inspect src/server.js",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": ["src/"]
  },
  "lint-staged": {
    "*.js": ["prettier-eslint --single-quote --no-semi --write", "eslint", "git add"],
    "*.json": ["prettier-eslint --single-quote --no-semi --write", "git add"]
  }
}
