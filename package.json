{
  "name": "klicker-api",
  "version": "0.0.1",
  "main": "src/server.js",
  "repository": "https://github.com/uzh-bf/klicker-api.git",
  "author": "Roland Schl√§fli <roland.schlaefli@bf.uzh.ch>",
  "license": "AGPL-3.0",
  "dependencies": {
    "apollo-server-express": "1.1.2",
    "bcryptjs": "2.4.3",
    "body-parser": "1.18.1",
    "cookie-parser": "1.4.3",
    "cors": "2.8.4",
    "cross-env": "5.0.5",
    "dotenv": "4.0.0",
    "express": "4.16.0",
    "express-jwt": "5.3.0",
    "graphql": "0.11.3",
    "graphql-tools": "1.2.2",
    "jsonwebtoken": "8.0.1",
    "lodash": "4.17.4",
    "mongodb": "2.2.31",
    "mongoose": "4.11.14",
    "optics-agent": "1.1.7"
  },
  "devDependencies": {
    "babel-eslint": "8.0.0",
    "eslint": "4.7.2",
    "eslint-config-airbnb-base": "12.0.0",
    "eslint-plugin-flowtype": "2.36.0",
    "eslint-plugin-import": "2.7.0",
    "flow-bin": "0.56.0",
    "husky": "0.14.3",
    "jest": "21.2.1",
    "lint-staged": "4.2.3",
    "nodemon": "1.12.1",
    "prettier": "1.7.0",
    "prettier-eslint": "8.1.1",
    "prettier-eslint-cli": "4.3.2"
  },
  "scripts": {
    "precommit": "lint-staged",
    "prepush": "yarn run test",
    "dev": "nodemon -w \"src/**/*.js\" -w .env -w package.json -w yarn.lock src/server.js",
    "dev:inspect": "nodemon -w \"src/**/*.js\" -w .env -w package.json -w yarn.lock --inspect src/server.js",
    "flow": "flow check",
    "format": "prettier-eslint --single-quote --no-semi --write \"src/**/*.js\"",
    "format:ci": "prettier-eslint --single-quote --no-semi --list-different \"src/**/*.js\"",
    "lint": "eslint \"src/**/*.js\"",
    "start": "cross-env NODE_ENV=production node src/server.js",
    "start:inspect": "cross-env NODE_ENV=production node --inspect src/server.js",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": ["src/"]
  },
  "lint-staged": {
    "*.js": ["prettier-eslint --single-quote --no-semi --write", "eslint", "git add"],
    "*.json": ["prettier-eslint --single-quote --no-semi --write", "git add"]
  }
}
