    "ramda": "0.27.1",
    "rate-limit-redis": "2.0.0",
    "raven": "2.6.4",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "request": "2.88.2",
    "request-promise": "4.2.6",
