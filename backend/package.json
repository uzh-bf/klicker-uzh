{
  "name": "klicker-api",
  "version": "0.0.1",
  "main": "src/server.js",
  "repository": "https://github.com/uzh-bf/klicker-api.git",
  "author": "Roland Schl√§fli <roland.schlaefli@bf.uzh.ch>",
  "license": "AGPL-3.0",
  "dependencies": {
    "apollo-server-express": "1.1.2",
    "bcryptjs": "2.4.3",
    "body-parser": "1.17.2",
    "cookie-parser": "1.4.3",
    "cors": "2.8.4",
    "cross-env": "5.0.5",
    "dotenv": "4.0.0",
    "express": "4.15.4",
    "express-jwt": "5.3.0",
    "graphql": "0.11.1",
    "graphql-tools": "1.2.2",
    "jsonwebtoken": "7.4.3",
    "lodash": "4.17.4",
    "mongodb": "2.2.31",
    "mongoose": "4.11.9"
  },
  "devDependencies": {
    "babel-eslint": "7.2.3",
    "eslint": "4.5.0",
    "eslint-config-airbnb-base": "11.3.2",
    "eslint-plugin-flowtype": "2.35.0",
    "eslint-plugin-import": "2.7.0",
    "flow-bin": "0.53.1",
    "jest": "20.0.4",
    "nodemon": "1.11.0",
    "pre-commit": "1.2.2",
    "prettier": "1.6.1",
    "prettier-eslint": "6.4.2",
    "prettier-eslint-cli": "4.2.1"
  },
  "scripts": {
    "debug": "cross-env NODE_ENV=production node --inspect src/server.js",
    "dev": "nodemon -w \"src/**/*.js\" -w .env -w package.json -w yarn.lock src/server.js",
    "dev:inspect": "nodemon -w \"src/**/*.js\" -w .env -w package.json -w yarn.lock --inspect src/server.js",
    "flow": "flow check",
    "format": "prettier-eslint --single-quote --no-semi --write \"src/**/*.js\"",
    "format:ci": "prettier-eslint --single-quote --no-semi --list-different \"src/**/*.js\"",
    "lint": "eslint \"src/**/*.js\"",
    "start": "cross-env NODE_ENV=production node src/server.js",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "src/"
    ]
  },
  "pre-commit": [
    "format",
    "lint"
  ]
}
