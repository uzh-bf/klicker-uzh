{
  "automerge": "patch",
  "extends": [":app"],
  "assignees": ["rschlaefli"],
  "labels": ["dependencies"],
  "reviewers": ["rschlaefli"],
  "schedule": ["after 10am and before 4pm on monday and thursday"],
  "semanticCommits": false,
  "timezone": "Europe/Zurich",
  "packageRules": [
    {
      "packageNames": ["mongodb", "mongoose"],
      "groupName": "database"
    },
    {
      "packagePatterns": ["^babel-eslint", "^eslint"],
      "groupName": "eslint",
      "automerge": "minor"
    },
    {
      "packageNames": [
        "apollo-server-express",
        "graphql",
        "graphql-tools",
        "graphql-subscriptions",
        "subscriptions-transport-ws"
      ],
      "groupName": "graphql"
    },
    {
      "packagePatterns": ["^prettier"],
      "groupName": "prettier",
      "automerge": "minor"
    },
    {
      "packageNames": ["jest"],
      "groupName": "test",
      "automerge": "minor"
    }
  ]
}
