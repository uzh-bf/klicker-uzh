{
  "automerge": "patch",
  "extends": [":app"],
  "assignees": ["rschlaefli"],
  "labels": ["dependencies"],
  "reviewers": ["rschlaefli"],
  "schedule": ["after 9am and before 4pm on monday and wednesday"],
  "semanticCommits": false,
  "timezone": "Europe/Zurich",
  "packageRules": [
    {
      "packagePatterns": ["^apollo", "react-apollo"],
      "groupName": "apollo",
      "automerge": "minor"
    },
    {
      "packagePatterns": ["^draftjs"],
      "groupName": "draftjs",
      "automerge": "minor"
    },
    {
      "packagePatterns": ["^babel-eslint", "^eslint"],
      "groupName": "eslint",
      "automerge": "minor"
    },
    {
      "packagePatterns": ["^raven", "^logrocket"],
      "groupName": "monitoring"
    },
    {
      "packagePatterns": ["^prettier"],
      "groupName": "prettier",
      "automerge": "minor"
    },
    {
      "packageNames": ["react", "react-dom", "react-test-renderer"],
      "groupName": "react"
    },
    {
      "packagePatterns": ["^@storybook", "^storybook"],
      "groupName": "storybook",
      "automerge": "minor"
    },
    {
      "packageNames": ["jest", "react-addons-test-utils", "enzyme", "cypress"],
      "groupName": "test",
      "automerge": "minor"
    },
    {
      "packagePatterns": ["^babel"],
      "groupName": "babel"
    },
    {
      "packagePatterns": ["^react-dnd"],
      "groupName": "react-dnd"
    }
  ]
}
