{
  "automerge": "patch",
  "extends": [":app"],
  "assignees": ["rschlaefli"],
  "labels": ["dependencies"],
  "reviewers": ["rschlaefli"],
  "schedule": ["after 10am and before 2pm on monday and thursday"],
  "semanticCommits": false,
  "timezone": "Europe/Zurich",
  "packageRules": [
    {
      "packagePatterns": ["^babel-eslint", "^eslint"],
      "groupName": "eslint",
      "automerge": "minor"
    },
    {
      "packageNames": ["flow-bin", "babel-plugin-transform-flow-strip-types"],
      "groupName": "flow",
      "automerge": "minor"
    },
    {
      "packagePatterns": ["^raven", "^logrocket"],
      "groupName": "monitoring"
    },
    {
      "packagePatterns": ["^prettier"],
      "groupName": "prettier",
      "automerge": "minor"
    },
    {
      "packageNames": ["react", "react-dom"],
      "groupName": "react"
    },
    {
      "packagePatterns": ["^@storybook", "^storybook"],
      "groupName": "storybook",
      "automerge": "minor"
    },
    {
      "packageNames": [
        "jest",
        "react-addons-test-utils",
        "react-test-renderer",
        "enzyme"
      ],
      "groupName": "test",
      "automerge": "minor"
    },
    {
      "packagePatterns": ["^prosemirror"],
      "groupName": "prosemirror"
    }
  ]
}
