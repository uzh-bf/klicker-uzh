{
  "automerge": "patch",
  "extends": [":app"],
  "assignees": ["rschlaefli"],
  "labels": ["dependencies"],
  "reviewers": ["rschlaefli"],
  "schedule": ["after 9am and before 4pm on monday and wednesday"],
  "semanticCommits": false,
  "timezone": "Europe/Zurich",
  "packageRules": [
    {
      "packagePatterns": ["^babel-eslint", "^eslint"],
      "groupName": "eslint",
      "automerge": "minor"
    },
    {
      "packagePatterns": ["^raven", "^logrocket"],
      "groupName": "monitoring"
    },
    {
      "packagePatterns": ["^prettier"],
      "groupName": "prettier",
      "automerge": "minor"
    },
    {
      "packageNames": ["react", "react-dom"],
      "groupName": "react"
    },
    {
      "packagePatterns": ["^@storybook", "^storybook"],
      "groupName": "storybook",
      "automerge": "minor"
    },
    {
      "packageNames": ["jest", "react-addons-test-utils", "react-test-renderer", "enzyme"],
      "groupName": "test",
      "automerge": "minor"
    },
    {
      "packagePatterns": ["^prosemirror"],
      "groupName": "prosemirror",
      "automerge": "minor"
    },
    {
      "packagePatterns": ["^babel"],
      "groupName": "babel"
    },
    {
      "packagePatterns": ["^react-dnd"],
      "groupName": "react-dnd"
    }
  ]
}
