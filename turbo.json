{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "format": {
      "cache": false
    },
    "format:check": {
      "cache": false
    },
    "lint": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "build:test": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "dev": {
      "cache": false,
      "outputs": ["dist/**", ".next/**"],
      "dependsOn": ["@klicker-uzh/prisma#build", "@klicker-uzh/markdown#build"]
    },
    "publish": {
      "cache": false,
      "dependsOn": ["build"]
    },
    "start": {
      "dependsOn": ["^build", "build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "start:test": {
      "dependsOn": ["^build", "build:test"],
      "outputs": ["dist/**", ".next/**"]
    }
  }
}
