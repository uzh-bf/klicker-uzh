{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "format": {},
    "format:check": {
      "outputLogs": "errors-only"
    },
    "lint": {
      "outputLogs": "errors-only"
    },
    "check": {
      "cache": false,
      "outputLogs": "errors-only",
      "dependsOn": ["^build"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "build:test": {
      "dependsOn": ["^build:test"],
      "outputs": ["dist/**", ".next/**"]
    },
    "dev": {
      "cache": false,
      "dependsOn": [
        "@klicker-uzh/util#build",
        "@klicker-uzh/prisma#build",
        "@klicker-uzh/graphql#build",
        "@klicker-uzh/markdown#build"
      ],
      "persistent": true
    },
    "dev:offline": {
      "cache": false,
      "dependsOn": [
        "@klicker-uzh/util#build",
        "@klicker-uzh/prisma#build",
        "@klicker-uzh/graphql#build",
        "@klicker-uzh/markdown#build"
      ],
      "persistent": true
    },
    "dev:migration": {
      "cache": false,
      "dependsOn": [
        "@klicker-uzh/util#build",
        "@klicker-uzh/prisma#build",
        "@klicker-uzh/graphql#build",
        "@klicker-uzh/markdown#build"
      ],
      "persistent": true
    },
    "dev:docs": {
      "cache": false,
      "persistent": true
    },
    "dev:test": {
      "dependsOn": ["^build:test", "build:test"],
      "outputs": ["dist/**", ".next/**"],
      "persistent": true
    },
    "publish": {
      "cache": false,
      "dependsOn": ["build"]
    },
    "start": {
      "dependsOn": ["^build", "build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "start:test": {
      "dependsOn": ["^build:test", "build:test"],
      "outputs": ["dist/**", ".next/**"]
    },
    "test": {
      "cache": false
    },
    "test:run": {
      "cache": false
    }
  }
}
