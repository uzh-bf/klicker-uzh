{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },

  "extends": ["plugin:@typescript-eslint/recommended", "airbnb", "plugin:prettier/recommended", "prettier/react"],
  "plugins": ["@typescript-eslint", "babel", "react", "jsx-a11y", "import"],

  "rules": {
    "@typescript-eslint/indent": 0,
    "@typescript-eslint/no-var-requires": 0,
    "@typescript-eslint/member-delimiter-style": [
      1,
      {
        "multiline": {
          "delimiter": "none"
        }
      }
    ],
    "@typescript-eslint/no-explicit-any": 0,

    "no-console": 0,
    "function-paren-newline": 0,
    "no-mixed-operators": 0,
    "sort-keys": 0,
    "global-require": 0,

    "no-unused-expressions": 0,
    "babel/no-unused-expressions": 1,

    "quotes": 0,
    "babel/quotes": [1, "single"],

    "import/extensions": [0, "never", { "ts": "never" }],
    "import/prefer-default-export": 0,
    "import/no-dynamic-require": 0,

    "react/prop-types": 1,
    "react/require-default-props": 1,
    "react/jsx-filename-extension": 0,
    "react/forbid-prop-types": 0,
    "react/destructuring-assignment": [2, "always"],
    "react/boolean-prop-naming": 2,
    "react/jsx-no-bind": 0,
    "react/jsx-curly-brace-presence": 0,
    "react/jsx-closing-tag-location": 0,
    "react/no-unused-prop-types": 1,
    "react/jsx-one-expression-per-line": 0,

    "jsx-a11y/anchor-is-valid": 0,
    "jsx-a11y/label-has-for": 0,
    "jsx-a11y/label-has-associated-control": 0,

    "react/jsx-sort-props": [
      2,
      {
        "callbacksLast": true,
        "shorthandFirst": true
      }
    ],
    "react/sort-comp": [
      2,
      {
        "order": ["type-annotations", "static-methods", "lifecycle", "everything-else", "render"]
      }
    ]
  },
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  }
}
