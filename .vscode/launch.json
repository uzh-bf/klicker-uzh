{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chrome (frontend-control)",
      "request": "launch",
      "type": "chrome",
      "url": "http://control.klicker.local",
      "webRoot": "${workspaceFolder}/apps/frontend-control",
    },
    {
      "name": "Launch Chrome (frontend-manage)",
      "request": "launch",
      "type": "chrome",
      "url": "http://manage.klicker.local",
      "webRoot": "${workspaceFolder}/apps/frontend-manage",
    },
    {
      "name": "Launch Chrome (frontend-pwa)",
      "request": "launch",
      "type": "chrome",
      "url": "http://pwa.klicker.local",
      "webRoot": "${workspaceFolder}/apps/frontend-pwa",
    },
    {
      "name": "Launch Chrome (office-addin)",
      "request": "launch",
      "type": "chrome",
      "url": "http://office.klicker.local",
      "webRoot": "${workspaceFolder}/apps/office-addin",
    },
    {
      "name": "Attach to Node Functions",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "preLaunchTask": "func: host start"
    }
  ]
}
